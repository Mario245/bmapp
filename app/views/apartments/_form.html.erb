<%= simple_form_for(@apartment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :no_of_bedrooms %>
    <%= f.input :rent %>
    <%= f.input :apt_no %>
    <%= f.input :no_of_floors %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
